<metatype:MetaData xmlns:metatype="http://www.osgi.org/xmlns/metatype/v1.0.0">

	<OCD name="HTTP Proxy" id="ddf.platform.proxy.http.HttpProxy">
		<AD
			description="The URI of the Http Proxy"
			name="Proxy URI" id="proxyUri" required="true"
			type="String" default="http://0.0.0.0:8080/proxy" />
		
		<AD
			description="The URI of the Target External System"
			name="Target URI URI" id="targetUri" required="true"
			type="String" default="http://192.168.1.1:8080/targetSystem" />
			
	</OCD>

	<Designate pid="ddf.platform.proxy.http.HttpProxy" 
	           factoryPid="ddf.platform.proxy.http.HttpProxy">
		<Object ocdref="ddf.platform.proxy.http.HttpProxy" />
	</Designate>

</metatype:MetaData>
